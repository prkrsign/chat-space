.header
    .header__text


.contents
    .left-content
        .side-header
            .side-header__box
                %p.side-header__box__user-name
                    = current_user.name
                %ul.side-header__box__menu
                    %li.side-header__box__menu__new-group
                        =link_to new_group_path  do
                            =fa_icon 'edit'

                    %li.side-header__box__menu__edit-user
                        =link_to edit_user_path(current_user)  do
                            =fa_icon 'cog'
            
        .groups
            .group
                - current_user.groups.each do |group|
                    = link_to group_messages_path(group) do
                        .group__name
                            = group.name
                        .group__message
                            メッセージはまだありません。

    .right-content
        .main-header
            .main-header__left-box
                %h2.main-header__left-box__current-group
                    test-group
                    
                %ul.main-header__left-box__member-list
                    Member : 

                    %li.main-header__left-box__member-list__member
                        ABC

                    %li.main-header__left-box__member-list__member
                        DEF

                    %li.main-header__left-box__member-list__member
                        GHI

            = link_to edit_group_path(current_user.id) , class:"main-header__edit-btn" do
                Edit


        .messages
            .message1
                .upper-info
                    %p.upper-info__user
                        test-user
                    %p.upper-info__date
                        2019/7/14(Sun) 12:26:46

                %p.message1__text
                    こんにちは！
            
            .message2
                .upper-info
                    %p.upper-info__user
                        test-user
                    %p.upper-info__date
                        2019/7/15(Sun) 12:26:46
                
                %p.message2__text
                    さようなら！


        .form
            = form_for [@group,@message] do |f|
                = f.text_field :content, class: 'new__message', placeholder: 'type a message'
                .form__mask
                    = f.label :image, class: 'form__mask__image' do
                        = fa_icon 'picture-o', class: 'icon'
                        = f.file_field :image, class: 'hidden', style:'display:none'
                = f.submit 'Send', class: 'form__submit'
